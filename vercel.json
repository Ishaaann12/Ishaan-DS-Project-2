{
    "version": 2,
    "builds": [
        {
            "src": "api/main.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "50mb" }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "api/main.py"
        }
    ],
    "installCommand": "pip install --no-cache-dir -r requirements.txt",
    "excludeFiles": ["**/*.log", "**/*.csv", "**/*.png", "**/*.pdf", "tests/", "__pycache__/", "venv/", "*.bin"]
}
